<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.teamdcls.mockweather.ui.fragment.TemperatureMapFragment"
        android:label="@string/title_wind"
        tools:layout="@layout/fragment_wind_map" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.teamdcls.mockweather.ui.fragment.RainMapFragment"
        android:label="@string/title_rain"
        tools:layout="@layout/fragment_rain_map" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.teamdcls.mockweather.ui.fragment.WindMapFragment"
        android:label="@string/title_temperature"
        tools:layout="@layout/fragment_temperature_map" />
</navigation>